                    column: 0
                }
            ]
        };

        jQuery(function($){
            /**************************** */
            

            function markColumn(row, column, features) {
                if(features.includes($(row).attr('data-name'))) {
                    $(row).find('.col' + column ).addClass('active');
                }
            }

            // reset a column to blank
            function clearDots( column ) {
                $('.col' + column  + '.indicator-cell').removeClass('active');
            }

            // populate all the option boxes
            $('.option-box').html('<div class="product-option" data-choice="1"><img src="/content/dam/sch-us/redesign/schlage/smart-locks/encodeplus_drop.png" alt="Schlage Encode Plus Smart Wifi Deadbolt Thumbnail"/><div> Schlage Encode Plus<br/> Smart Wifi Deadbolt<div class="msrp">$330 MSRP</div></div></div><div class="product-option" data-choice="2"><img src="/content/dam/sch-us/redesign/schlage/smart-locks/encode_drop.png" alt="Schlage Encode Smart Wifi Deadbolt"/><div>Schlage Encode<br/> Smart Wifi Deadbolt<div class="msrp">$300 MSRP</div></div></div><div class="product-option" data-choice="3"><img src="/content/dam/sch-us/redesign/schlage/smart-locks/encodelever_drop.png" alt="Schlage Encode Smart Wifi Lever Thumbnail"/><div>Schlage Encode<br/> Smart Wifi Lever<div class="msrp">$310 MSRP</div></div></div><div class="product-option" data-choice="4"><img src="/content/dam/sch-us/redesign/schlage/smart-locks/arrive_drop.png" alt="Schlage Arrive Smart Wifi Deadbolt"/><div>Schlage Arrive<br/> Smart Wifi Deadbolt<div class="msrp">$199 MSRP</div></div></div><div class="product-option" data-choice="5"><img src="/content/dam/sch-us/redesign/schlage/smart-locks/connect_drop.png" alt="Schlage Connect Smart Deadbolt Thumbnail"/><div>Schlage Connect<br/> Smart Deadbolt<div class="msrp">$241 MSRP</div></div></div>');


            // auto click an option in column 1 to set default
            $(document).ready(function(){
                $('#comparison-chart-header .col1 .product-option[data-choice="1"]').trigger('click'); 
            });

            // populate column based on choice
            $('#comparison-chart-header .product-option').click(function() {
                var column = $(this).parent().attr("data-column");
                var choice = $(this).attr("data-choice");
               
                var watcher = "";
                // remove this column from another choice if it is already used
                for(i in prodConfig.products) {
                    var product = prodConfig.products[i];
                    if(product.column === column) {
                        if(product.option  === choice) {
                            product.column = choice;
                          //  alert(product);
                        } else {
                            product.column = 0;
                          //  alert(product);
                        }
                    } else {
                        //alert(product.column);
                        //alert(choice)
                        if(product.option  === choice) {
                            product.column = column;
                           // alert(product);
                        }
                    }
                    watcher = watcher + product.option + " , " + product.column + " | "
                }

                // mark the chosen option with this column number

                // loop through all the options and disable them if used
                $('.product-option').removeClass('disabled');
                for(i in prodConfig.products) {
                    var product = prodConfig.products[i];
                    if(product.column !== 0 ) {
                        $('.product-option[data-choice="' + product.option + '"]').addClass('disabled');
                    }
                    
                }
                

                var choiceData = prodConfig.products.find(product => product.option === choice);

                clearDots(column);

                $('.comparison-chart-row').each(function(){
                    markColumn(this, column, choiceData.features);
                });

                $('.col' + column + ' .product-choice').addClass('active');
                $('.col' + column + ' .product-choice .choice-image').attr('src',choiceData.image);                
                $('.col' + column + ' .product-choice .choice-price').text(choiceData.price);
                $('.col' + column + ' .product-choice .choice-link a').attr('href',choiceData.url);
                $('.col' + column + ' .product-choice .choice-link a').attr('aria-label','View ' +  choiceData.imagelabel+ ' Styles');
                $('.col' + column + ' .product-choice .choice-image').attr('alt',choiceData.imagelabel); 

                $('.col' + column + ' .selector').html(choiceData.label);
                
                $('.option-box').removeClass('active');
            });

            // open/close options box for a column
            $('#comparison-chart-header .selector').click(function() {
                var isActive = $(this).parent().find('.option-box').hasClass('active');                
                $('.option-box').removeClass('active');
                if(!isActive) { 
                    $(this).parent().find('.option-box').toggleClass('active');
                }                
            });

		});


    </script>

