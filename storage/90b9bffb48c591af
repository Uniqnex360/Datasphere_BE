    <script>
const mediaQuery = window.matchMedia("(max-width: 768px)");
      let frameCount = 56;
      let urls = new Array(frameCount).fill().map((o, i) => `/content/dam/sch-us/redesign/schlage/smart-locks/encode-plus-sequence-2/Encode_PLUS_Header_Products_Desktop_${(i).toString().padStart(5, '0')}.jpg`);

if (mediaQuery.matches) {
 urls = new Array(frameCount).fill().map((o, i) => `/content/dam/sch-us/redesign/schlage/smart-locks/encode-plus-sequence-mobile-2/Encode_PLUS_Header_Products_Mobile_${(i).toString().padStart(5, '0')}.jpg`);

$("#imagesequence").attr("src","/content/dam/sch-us/redesign/schlage/smart-locks/encode-plus-sequence-mobile-2/Encode_PLUS_Header_Products_Mobile_00000.jpg");

}

function preloadImages(imagePaths) {
  const promises = imagePaths.map(path => {
    return new Promise((resolve, reject) => {
      const img = new Image();
      img.onload = () => resolve(img);
      img.onerror = reject;
      img.src = path;
    });
  });

  return Promise.all(promises);
}

preloadImages(urls)
  .then(images => {
    // Images are preloaded and ready to use
    console.log("Images preloaded:", images);
  })
  .catch(error => {
    console.error("Error preloading images:", error);
  });


      const options = {
        threshold: 0.55,
      };

      let observer = new IntersectionObserver(([entry]) => {
          console.log("OBSERVER TRIGGERED 1");

          if (
            entry &&
            entry.isIntersecting &&
            entry.intersectionRatio >= options.threshold
          ) {
            
            target = 'imagesequence';
            images = urls;
            fps =  14;
            let currentFrame = 0;
            const img = document.getElementById(target);

            const intervalID = setInterval(() => {
              img.src = images[currentFrame];
              currentFrame++;           
              if (currentFrame >= images.length) {
                clearInterval(intervalID);
              }
              //currentFrame = (currentFrame + 1) % images.length; 
            }, 1000 / fps);
            observer.unobserve(document.getElementById("imagesequence"));
          }
        }, options);


        setTimeout(function(){
          observer.observe(document.getElementById("imagesequence"));
        },(1000));










let observer2 = new IntersectionObserver((entries) => {

        entries.forEach((entry) => {
          if (
            entry &&
            entry.isIntersecting &&
            entry.intersectionRatio >= options.threshold
          ) {           

            entry.target.classList.add("active");
        setTimeout(function(){
            entry.target.classList.add("show-title");
},(2500));

            observer2.unobserve(entry.target);
          }
        });
      }, options);
          
        setTimeout(function(){
          let elements = document.querySelectorAll(".windowed-vid");
          for (let element of elements) {
            observer2.observe(element);
          }

        },(1000));



</script>

<script>
function playVideos() {
$(".video-autoplay-loop").each(function() {
    this.play();
  });

        }

        function pauseVideos() {
$(".video-autoplay-loop").each(function() {
    this.pause();
  });
        }


document.addEventListener("DOMContentLoaded", () => {

	// Use Intersection Observer to determine if objects are within the viewport
	const observer = new IntersectionObserver(entries => {
	  entries.forEach(entry => {
		if (entry.isIntersecting) {
		  entry.target.classList.add('in-view');
		  return;
		}
		entry.target.classList.remove('in-view');
	  });
	});

	// Get all the elements with the .animate class applied
	const allAnimatedElements = document.querySelectorAll('#animateImage img');

	// Add the observer to each of those elements
	allAnimatedElements.forEach((element) => observer.observe(element));

}); 

</script>
