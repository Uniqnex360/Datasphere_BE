<script>
    function limitMattressSizeToSingleSelection() {
        $('a.toggleControl:contains("Mattress Size")').parents('.filter-block').find('input[type="checkbox"]').click(function () {
            var clickedId = $(this).attr('id');
            var others = $(this).parents('.filter-block').find('input[type="checkbox"]:not("#' + clickedId + '")');
            $(others).prop('checked', false);
        });
    }
    $(function () {
        limitMattressSizeToSingleSelection();
    });
</script>
            
            
            
