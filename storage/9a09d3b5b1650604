<script>
    // (function() {
    //     window.Tawk_API = window.Tawk_API || {};
    //     window.Tawk_API.onLoad = function(){
    //         window.Tawk_API.maximize();
    //     };
    // })();

    function setUtmFields(params) {
        var utmSource = params.get('utm_source');
        if (utmSource) {
            jQuery('.utm_source').val(utmSource);
        }
        var utmMedium = params.get('utm_medium');
        if (utmMedium) {
            jQuery('.utm_medium').val(utmMedium);
        }
        var utmCampaign = params.get('utm_campaign');
        if (utmCampaign) {
            jQuery('.utm_campaign').val(utmCampaign);
        }
    }

    (function() {
        var urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('utm_source') || urlParams.has('utm_medium') || urlParams.has('utm_campaign')) {
            setUtmFields(urlParams);
        } else if (document.referrer) {
            try {
                var refUrl = new URL(document.referrer);
                var refParams = new URLSearchParams(refUrl.search);
                setUtmFields(refParams);
            } catch (e) {
                // fail silently
            }
        }
    })();
</script>
</body>

