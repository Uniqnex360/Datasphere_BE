    jQuery(document).ready(function() {
        if (jQuery(window).width() <= 991) {
            jQuery('.navbar-nav .nav-item .icon-dropArrow').click(
                function() {
                    jQuery(this).children('.navSubmenu').addClass('show')
                },
                function() {
                    jQuery(this).children('.navSubmenu').removeClass('show')
                }
            )
            jQuery('.navbar-nav .nav-item .submenu').slideDown();



            jQuery('#customHeader .Submenu .icon-dropArrow').click(function() {
                if (jQuery(this).parent('.Submenu').hasClass('show')) {
                    jQuery(this).parent('.Submenu').removeClass('show');
                    jQuery(this).siblings('.navSubmenu').hide();
                    jQuery('#closeMenu').removeClass('active')
                } else {
                    jQuery('#customHeader .Submenu').removeClass('show');
                    jQuery('#customHeader .Submenu .navSubmenu').hide();
                    jQuery(this).parent('.Submenu').addClass('show');
                    jQuery(this).siblings('.navSubmenu').show();
                    jQuery('#closeMenu').addClass('active')
                }
            });

            jQuery('.menuOverlay').click(function() {
                jQuery('#customHeader .Submenu').removeClass('show');
                jQuery('#customHeader .Submenu .navSubmenu').hide();
                jQuery('#closeMenu').removeClass('active');
            });
            jQuery('#closeMenu').click(function() {
                jQuery(this).removeClass('active');
                jQuery('#customHeader .Submenu').removeClass('show');
                jQuery('#customHeader .Submenu .navSubmenu').hide();
            });
        }
    });
